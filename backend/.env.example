# .env.example - Backend Configuration
# Copy this to .env and fill in your actual values

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/chippewa_home_care

# Security
JWT_SECRET=your-secret-key-change-this-to-something-very-secure-minimum-32-characters
NODE_ENV=development

# Frontend
FRONTEND_URL=http://localhost:3000

# Server
PORT=5000
HOST=localhost

# Email (SendGrid)
SENDGRID_API_KEY=SG.your-api-key-here
SENDGRID_FROM_EMAIL=noreply@chippewahomecare.com

# SMS (Twilio) - Optional
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+14155552671

# Push Notifications
VAPID_PUBLIC_KEY=your-public-key
VAPID_PRIVATE_KEY=your-private-key

# Logging
LOG_LEVEL=info
